<?xml version='1.0' encoding='utf-8'?>

<launch>
  <node name="arvlidarNode"          pkg="arvlidar_ros"  type="arvlidarNode_A1" output="screen">
    <param name="serial_port"         type="string" value="/dev/ttyUSB1"/>
    <param name="serial_baudrate"     type="int"    value="115200"/><!--A1/A2 -->
    <!--param name="serial_baudrate"     type="int"    value="256000"--><!--A3 -->
    <param name="frame_id"            type="string" value="laser_frame"/>
    <param name="inverted"            type="bool"   value="false"/>
    <param name="angle_compensate"    type="bool"   value="true"/>
    <param name="output_angle_min"    type="int"   value="-120"/>
    <param name="output_angle_max"    type="int"   value="120"/>
  </node>

  <!--  激光雷达相对于底盘的位置(x,y,z,y,p,r)  -->
  <node pkg="tf" type="static_transform_publisher" name="base_link_to_laser" 
    args="0.3432 0.0 0.0755 -1.57 0 0 base_link laser_frame 50" />
</launch>
