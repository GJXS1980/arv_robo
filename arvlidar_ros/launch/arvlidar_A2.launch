<?xml version='1.0' encoding='utf-8'?>

<launch>
  <master auto="start"/>
  <node name="arvlidarNode"          pkg="arvlidar_ros"  type="arvlidarNode_A2" output="screen">
    <param name="serial_port"         type="string" value="/dev/arvlidar"/>
    <!-- param name="serial_port"         type="string" value="/dev/ttyUSB0"/ -->
    <param name="serial_baudrate"     type="int"    value="115200"/><!--A1/A2 -->
    <!--param name="serial_baudrate"     type="int"    value="256000"--><!--A3 -->
    <param name="frame_id"            type="string" value="laser_frame"/>
    <param name="inverted"            type="bool"   value="true"/>
    <param name="angle_compensate"    type="bool"   value="true"/>
    <param name="output_angle_max"    type="int"   value="80"/>
    <param name="output_angle_min"    type="int"   value="-80"/>
  </node>
</launch>
